extends ../layouts/defaultLayout

block content
    h1 Transfer
    
    form(action="/transfer/create" method="POST")

        input(type="hidden" name="_csrf" value=csrfToken)

        .form-group
            label(for="accountId") Account ID
            input#accountId.form-control(name="accountId" type="text")

        .form-group
            label(for="amount") Amount
            input#amount.form-control(name="amount" type="number")

        button.btn.btn-primary Transfer