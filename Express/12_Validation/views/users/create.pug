extends ../layouts/defaultLayout

block content
	h1 Create new user

	if (errors)
		each error in errors
			.alert.alert-danger= error
			
	form(action="/users/create" method="POST")
		.form-group
			label(for="name") Name
			input#name.form-control(name="name" type="text" placeholder="Enter your name" value=inputValue?inputValue.name:"")
		.form-group
			label(for="phone") Phone
			input#phone.form-control(name="phone" type="text" placeholder="Enter your phone" value=inputValue?inputValue.phone:"")
		button.btn.btn-primary Create
