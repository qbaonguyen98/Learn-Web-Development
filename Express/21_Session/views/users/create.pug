extends ../layouts/defaultLayout

block content
	h1 Create new user

	if (errors)
		each error in errors
			.alert.alert-danger= error

	//- enctype="multipart/form-data" --> allow user to post a file
	
	form(action="/users/create" method="POST" enctype="multipart/form-data")
		.form-group
			label(for="name") Name
			input#name.form-control(name="name" type="text" placeholder="Enter your name" value=inputValue?inputValue.name:"")
		
		.form-group
			label(for="phone") Phone
			input#phone.form-control(name="phone" type="text" placeholder="Enter your phone" value=inputValue?inputValue.phone:"")

		.form-group
			label(for="avatar") Avatar
			input#avatar.form-control-file(name="avatar", type="file")

		button.btn.btn-primary Create